CREATE TABLE testing_table (name varchar(255), contact_name varchar(255), roll_no varchar(255));


ALTER TABLE testing_table DROP name;

ALTER TABLE testing_table CHANGE contact_name username varchar(255);
  OR
ALTER TABLE testing_table RENAME COLUMN contact_name TO username;

ALTER TABLE testing_table ADD COLUMN first_name varchar(255), ADD last_name varchar(255);

ALTER TABLE testing_table MODIFY COLUMN roll_no INT;

OR

ALTER TABLE testing_table DROP name, CHANGE contact_name username varchar(255), ADD column first_name varchar(255), ADD last_name varchar(255), MODIFY column roll_no INT;

ALTER TABLE testing_table DROP name, RENAME COLUMN contact_name TO username, ADD first_name varchar(255), ADD last_name varchar(255), MODIFY COLUMN roll_no INT;
